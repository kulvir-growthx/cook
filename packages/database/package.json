{
  "name": "@repo/database",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist .turbo",
    "dev": "tsc --watch",
    "db:generate": "bun with-env drizzle-kit generate",
    "db:migrate": "bun with-env drizzle-kit migrate",
    "db:push": "bun with-env drizzle-kit push",
    "db:studio": "bun with-env drizzle-kit studio",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e .env --"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.4",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@repo/eslint": "workspace:*",
    "@repo/typescript": "workspace:*",
    "@types/pg": "^8.11.10",
    "dotenv-cli": "8.0.0",
    "drizzle-kit": "^0.30.2",
    "drizzle-seed": "0.3.0",
    "typescript": "5.5.4"
  }
}
