{
  "name": "@repo/database",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "build": "tsup --dts",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun run src/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "bun --hot src/index.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.4",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@repo/eslint": "workspace:*",
    "@repo/typescript": "workspace:*",
    "@types/eslint": "^8.56.10",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  }
}
