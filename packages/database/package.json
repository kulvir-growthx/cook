{
  "name": "@repo/database",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts ./src/schema/*.ts --outdir ./dist --target bun",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun run src/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "bun --hot src/index.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.4",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@repo/eslint": "workspace:*",
    "@repo/typescript": "workspace:*",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.2"
  }
}
