{
  "name": "job-board",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{mjs,ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{mjs,ts,tsx,md,json}\"",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.43",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ]
}
